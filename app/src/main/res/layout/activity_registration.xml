<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration">

    <EditText
        android:id="@+id/et_pass_reg"
        android:layout_width="343dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="4dp"
        android:elevation="6dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_addrs_reg" />

    <EditText
        android:id="@+id/et_email_reg"
        android:layout_width="343dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="4dp"
        android:elevation="6dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name_reg" />

    <EditText
        android:id="@+id/et_name_reg"
        android:layout_width="343dp"
        android:layout_height="51dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_baseline_perm_identity_24"
        android:drawablePadding="4dp"
        android:elevation="6dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_phno_reg"
        android:layout_width="343dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_baseline_local_phone_24"
        android:drawablePadding="4dp"
        android:elevation="6dp"
        android:ems="10"
        android:hint="Phone No"
        android:inputType="phone"
        android:paddingStart="8dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email_reg" />

    <EditText
        android:id="@+id/et_addrs_reg"
        android:layout_width="346dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="4dp"
        android:elevation="6dp"
        android:ems="10"
        android:hint="Full Address"
        android:inputType="textPostalAddress"
        android:paddingStart="8dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_phno_reg" />

    <EditText
        android:id="@+id/et_cpass_reg"
        android:layout_width="343dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="4dp"
        android:elevation="6dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pass_reg" />

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/light_red"
        android:drawablePadding="4dp"
        android:elevation="6dp"
        android:paddingStart="8dp"
        android:text="Resgister"
        android:textColor="@color/golden_yellow"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_cpass_reg"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>