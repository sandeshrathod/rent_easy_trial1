<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6DDA9"
    tools:context=".pro_reg">
    <TextView
        android:id="@+id/lgn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="Product Registraion"
        android:textColor="@color/blue_main"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/pro_img"
        android:layout_width="195dp"
        android:layout_height="92dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <Spinner
        android:id="@+id/catgry_spinn"
        android:layout_width="147dp"
        android:layout_height="31dp"
        android:layout_marginTop="44dp"
      />


    <EditText
        android:id="@+id/et_pro_name"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"

        android:layout_marginRight="30dp"
        android:background="@drawable/edit"
        android:drawablePadding="4dp"
        android:elevation="6dp"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/promfg_date"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"

        android:layout_marginRight="30dp"
        android:background="@drawable/edit"
        android:drawablePadding="4dp"
        android:elevation="6dp"
        android:ems="10"
        android:hint="Mfg Date"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:textColor="#000000" />


    <EditText
        android:id="@+id/et_pro_desc"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="36dp"

        android:layout_marginRight="30dp"
        android:background="@drawable/edit"
        android:drawablePadding="4dp"

        android:elevation="6dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:paddingStart="8dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/et_pro_deposit"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="12dp"

        android:layout_marginRight="30dp"
        android:background="@drawable/edit"
        android:drawablePadding="4dp"

        android:elevation="6dp"
        android:ems="10"
        android:hint="Deposit"
        android:inputType="number"
        android:paddingStart="8dp"
        android:textColor="#000000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_pro_rent"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"

            android:layout_marginRight="30dp"
            android:background="@drawable/edit"
            android:drawablePadding="4dp"

            android:elevation="6dp"
            android:ems="10"
            android:hint="Rent"
            android:inputType="number"
            android:paddingStart="8dp"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/time_spinn"
            android:layout_width="100dp"
            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>

    <Spinner
        android:id="@+id/loc_spinn"
        android:layout_width="180dp"
        android:layout_height="27dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp" />


    <Button
        android:id="@+id/proreg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="16dp"
        android:text="submit" />

</LinearLayout>